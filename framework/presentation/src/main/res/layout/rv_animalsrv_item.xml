<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    app:cardElevation="4dp"
    app:cardCornerRadius="8dp"
    android:layout_marginHorizontal="8dp"
    android:layout_marginVertical="8dp"
    android:layout_height="wrap_content">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <ImageView
            android:scaleType="centerCrop"
            android:layout_width="match_parent"
            android:layout_height="190dp"
            android:src="@drawable/icon_rvproductitem_star"
            android:id="@+id/imgMainMenuRvItem_image"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            />

        <TextView
            android:id="@+id/txt_RvAnimalItem_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="dog"
            android:textSize="16sp"
            android:textColor="@color/gray500"
            app:layout_constraintTop_toBottomOf="@id/imgMainMenuRvItem_image"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="16dp"
            android:maxLines="1"
            android:ellipsize="end"
            />

        <TextView
            android:maxLines="1"
            android:ellipsize="end"
            android:id="@+id/txt_RvAnimalRv_animalType"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:text="mammal"
            app:layout_constraintEnd_toEndOf="@+id/txt_RvAnimalItem_title"
            app:layout_constraintTop_toBottomOf="@id/txt_RvAnimalItem_title" />

        <TextView
            android:maxLines="1"
            android:layout_marginTop="28dp"
            android:layout_marginStart="24dp"
            android:layout_marginBottom="16dp"
            android:id="@+id/txt_rvAnimalItem_heightMax"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="183 cm"
            android:textColor="@color/gray500"
            android:textSize="14sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/txt_RvAnimalRv_animalType" />

        <TextView
            android:maxLines="1"
            android:id="@+id/txt_rvProductItem_weight"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:layout_marginTop="28dp"
            android:layout_marginBottom="16dp"
            tools:text="200 years"
            android:textColor="@color/gray300"
            android:textSize="12sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@+id/txt_RvAnimalRv_animalType"
            app:layout_constraintTop_toBottomOf="@+id/txt_RvAnimalRv_animalType" />


    </androidx.constraintlayout.widget.ConstraintLayout>



</androidx.cardview.widget.CardView>